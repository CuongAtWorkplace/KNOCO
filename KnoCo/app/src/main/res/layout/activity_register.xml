<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/book_theme"
    tools:context=".activity.RegisterActivity">

    <TextView
        android:id="@+id/Logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/abhaya_libre_bold"
        android:textColor="@color/white"
        android:text="KnoCo"
        android:textSize="40dp"

        />
    <TextView
        android:id="@+id/wrongtxt"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="abaaaaaaaaaaaaaaaaaaaaaaac"
        android:textSize="15dp"
        android:visibility="invisible"
        android:layout_below="@+id/repass"
        android:textColor="#FF5533"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/Email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Email"
        android:textColor="@color/white"
        android:drawablePadding="20dp"
        android:paddingLeft="20dp"
        android:drawableLeft="@drawable/ic_baseline_email_20"
        android:textColorHint="#928888"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/Logo"
        android:background="@drawable/round_edit"
        android:fontFamily="@font/abhaya_libre_bold"
        android:layout_marginHorizontal="10dp"
        android:singleLine="true"
        />
    <EditText
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/Logo"
        android:textColor="@color/white"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/round_edit"
        android:drawableLeft="@drawable/ic_baseline_person_outline_24"
        android:drawablePadding="20dp"
        android:fontFamily="@font/abhaya_libre_bold"
        android:hint="UserName"
        android:paddingLeft="20dp"
        android:textColorHint="#928888"
        android:nextFocusDown="@+id/pass"
        android:singleLine="true"

        />



    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Password"
        android:textColor="@color/white"
        android:drawablePadding="20dp"
        android:paddingLeft="20dp"
        android:drawableLeft="@drawable/ic_baseline_key_24"
        android:textColorHint="#928888"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/userName"
        android:background="@drawable/round_edit"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/abhaya_libre_bold"
        android:inputType="textPassword"
        android:nextFocusDown="@+id/repass"

        />
    <EditText
        android:id="@+id/repass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Confirm Password"
        android:textColor="@color/white"
        android:drawablePadding="20dp"
        android:paddingLeft="20dp"
        android:drawableLeft="@drawable/ic_baseline_check_24"
        android:textColorHint="#928888"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/pass"
        android:background="@drawable/round_edit"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/abhaya_libre_bold"
        android:inputType="textPassword"
        />


    <Button
        android:id="@+id/SignUp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/repass"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_circle"
        android:fontFamily="@font/abhaya_libre_bold"
        android:text="Sign up "
        android:textColor="#625F5F"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/SignUp"

        android:layout_centerInParent="true"
        >
    <TextView
        android:id="@+id/suggest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have account ?"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:fontFamily="@font/abhaya_libre_bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:textColor="#625F5F"
        android:textSize="20dp"
        android:layout_toEndOf="@+id/suggest"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/abhaya_libre_bold"
        android:textColorLink="@color/black"
        android:id="@+id/signin"
        android:clickable="true"
        />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        android:indeterminateTint="@color/white"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>